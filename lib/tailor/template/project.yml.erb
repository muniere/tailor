# ~/.tailor/<%= name %>.yml

#
# Path: file path to tail
#
path: /var/log/nginx/access.log

#
# Servers: servers to tail logs
#  - host: hostname
#  - color: color to display with
#
servers:
  - host: host1.mydomain
    color: green

  - host: host2.mydomain
    color: cyan

  - host: host3.mydomain
    color: magenta
